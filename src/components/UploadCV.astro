---
import CallToAction from './CallToAction.astro';
import Icon from './Icon.astro';
---

<section class="uploadCv">

		<div>
			<h3>Mes expériences</h3>
		</div>
        <div class="BtnUploadCV">
            <CallToAction href="./public/docs/CV-Laurent-Lesage.pdf" target="_blank">
                Télécharger le CV
                <Icon icon="arrow-right" size="1.2em" />
            </CallToAction>
        </div>

</section>

<style>

.uploadCv {
		display: flex;
		flex-direction: row;
        justify-content:space-between;
        align-items: center;
		margin: -75px 0px;
		padding: 0px;
	}

	.uploadCv h3 {
		font-size: var(--text-4xl);
	}

	@media (max-width: 767px) {

		.uploadCv {
			display: flex;
			flex-direction: column;
			justify-content:space-between;
			align-items: center;
		}

		.uploadCv h3 {
			font-size: var(--text-2xl);
			margin: 30px auto;
		}

		.BtnUploadCV
		{
			margin: 30px auto;
		}
	}

</style>
